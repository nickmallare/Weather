<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherInformation"
    android:background="@android:color/holo_blue_dark">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:paddingTop="15dp"
        android:textSize="30sp"
        android:textStyle="bold"/>


        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_below="@id/Title"
            android:id="@+id/ImageToday"
            android:layout_alignParentLeft="true"
            android:background="@android:color/holo_blue_bright"
            />

        <TextView
            android:id="@+id/Day1"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Title"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_toRightOf="@id/ImageToday"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_bright"
            android:id="@+id/Day1Text"
            android:layout_below="@id/Day1"
            android:layout_above="@id/Day2"
            android:textAlignment="center"
            android:layout_toRightOf="@id/ImageToday"
            />



        <TextView
            android:id="@+id/Day2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ImageToday"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Day2Text"
            android:textAlignment="center"
            android:layout_below="@id/Day2"
            android:background="@android:color/holo_blue_bright"/>



        <TextView
            android:id="@+id/Day3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Day2Text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Day3Text"
            android:layout_below="@id/Day3"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_bright"/>



        <TextView
            android:id="@+id/Day4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Day3Text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Day4Text"
            android:layout_below="@id/Day4"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_bright"/>


        <TextView
            android:id="@+id/Day5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Day4Text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@android:color/holo_blue_light"
            android:textColor="@android:color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Day5Text"
            android:layout_below="@id/Day5"

            android:textAlignment="center"
            android:background="@android:color/holo_blue_bright"/>

    <Button
        android:id="@+id/ButtonBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingBottom="15dp"
        android:text="Back"
        android:onClick="BackButtonClicked"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:paddingRight="15dp"
        />




</RelativeLayout>